<header>
    <nav class="nav navbar-nav navbar-left title">
      <%= link_to "NaganoCAKE", root_path, class: "fas fa-birthday-cake" %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if customer_signed_in? %>

          <!--カスタマーがログインしている時 -->
          <li class="header-name">
            ようこそ、<%= current_customer.first_name %>さん！
          </li>
          <li>
            <%= link_to "マイページ", customers_path(current_customer), class: "btn btn-outline-danger glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to "商品一覧", products_path, class: "glyphicon glyphicon-briefcase" %>
          </li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle glyphicon glyphicon-th-list",
             'data-toggle': :dropdown do %>ジャンル検索<span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <% Genre.all.each do |genre| %>
                <% if genre.is_valid == true %>
			            <li class="genre_dropdown">
                    <%= link_to admin_genre_path(genre), method: :get do %>
                      <%= genre.name %>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
		        </ul>
          </li>
          <li>
            <%= link_to customers_cart_items_path,
             class: "glyphicon glyphicon-shopping-cart" do %>カート(<%= current_customer.cart_items.count %>個)
            <% end %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
          </li>

        <% elsif admin_signed_in? %>

          <!-- 管理者がログインしている時 -->
          <li>
            <%= link_to "商品一覧", admin_products_path, class: "glyphicon glyphicon-briefcase" %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_customers_path, class: "glyphicon glyphicon-user"  %>
          </li>
          <li>
            <%= link_to "注文履歴一覧", admin_orders_path, class: "glyphicon glyphicon-list-alt" %>
          </li>
          <li>
            <%= link_to "ジャンル一覧", admin_genres_path, class: "glyphicon glyphicon-th-list" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
          </li>

          <p>Search</p>

        <% else %>

          <!-- ログインしていない時 -->
          <li>
            <%= link_to "商品一覧", products_path, class: "glyphicon glyphicon-briefcase" %>
          </li>
          <li>
            <%= link_to "新規登録", new_customer_registration_path, class: "glyphicon glyphicon-edit" %>
          </li>
          <li>
            <%= link_to "ログイン", new_customer_session_path, class: "glyphicon glyphicon-log-in" %>
          </li>

          <!-- 最後の消す -->
          <li>
            <%= link_to "adminログイン", new_admin_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
</header>
