<h2 class="head-line title_h2 text-center">商品新規登録</h2>
<div class="row">
  <%= form_for(@product, url: admin_products_path, method: :post, class: "form-horizontal") do |f| %>
	  <div class="col-xs-4">
      <div class="img_field">
      </div>
	      <%= f.attachment_field :image, class: "image" %>
    </div>
    <div class="col-xs-6">
      <%= render "form_product", f: f %>
      <div class="actions">
	      <%= f.submit "新規登録", class: "btn btn-primary pull-right" %>
      </div>

    </div>
  <% end %>
</div>
