<h2 class="head-line title_h2 text-center">商品編集</h2>
<div class="row">
  <%= form_for(@product, url: admin_product_path, method: :patch) do |f| %>
	  <div class="col-xs-4">
      <div class="img_field">
        <%= attachment_image_tag(@product, :image, size: "250x180") %>
      </div>
	      <%= f.attachment_field :image, class: "image" %>
    </div>
    <div class="col-xs-4">
      <div class="field">
        <%= f.label :"商品名" %>
        <%= f.text_field :name, class: "name" %>
      </div>
      <div class="field">
        <%= f.label :"商品説明" %>
        <%= f.text_area :explanation, class: "explanation" %>
      </div>
      <div class="field">
        <%= f.label :"ジャンル" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name, class: "genre_id") %>
      </div>
      <div class="field">
        <%= f.label :"税抜価格" %>
        <%= f.text_field :tax_out_price, class: "tax_out_price" %>円
      </div>
      <div class="field">
        <%= f.label :"販売ステータス" %>
        <!-- booleanのformの書き方 -->
        <%= f.select :is_sale, [['販売中', true], ['販売停止', false]], class: "is_sale" %>
      </div>
      <div class="actions">
	      <%= f.submit "変更を保存" %>
      </div>

    </div>
  <% end %>
</div>
