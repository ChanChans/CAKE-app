<h2>ジャンル一覧・追加</h2>
  <%= form_for(@genre) do |f| %>
　　<div>ジャンル<%= f.text_field :name %></div>
  <% end %>

<table>
  <thead>
    <tr>
      <td>ジャンル</td>
      <td>状態</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <%= @genres.each do |genre| %>
      <tr>
        <td><%= genre.name%></td>
        <td><%= genre.is_valid %></td>
        <td><%= link_to "編集する", edit_admin_genre_path, class: "btn btn-info" %></td>
      </tr>

    <% end %>
  </tbody>
</table>