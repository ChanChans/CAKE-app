<div class="container">
	<div class="row">
		<div class="col-xs-3">
		</div>

		<div class="col-xs-9">
				<h2>商品一覧</h2>
				<p class="products-count">(全<%= @products.count %>件)</p>

				<div class="">
					<% @products. each do |product| %>
					  <div id="img_field">
					  	<%= link_to product_path(product.id) do %>
				          <%= attachment_image_tag(product, :image, size: "180x120", fallback: "no_image.jpg") %>
				        <% end %>
				      </div>
					  <div>
					  	<%= link_to product_path(product.id) do %>
					  	<%= product.name %></div>
					  	<% end %>
					  <div>¥<%= product.tax_out_price.to_s(:delimited) %></div>
					<% end %>
				</div>
		</div>

	</div>
</div>