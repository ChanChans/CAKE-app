<h2>登録情報編集</h2>


<%= form_for(@customer) do |f| %>

<!-- エラーメッセージ表示-->
<% if @customer.errors.any? %>
  <h3><%= @customer.errors.count %>error occurrence</h3>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- エラーメッセージ表示-->


<div class="field">
  <%= f.label　"名前" %>
  姓
  <%= f.text_field :last_name, class: "last_name" %>
  名
  <%= f.text_field :first_name, class: "first_name" %>
</div>

<div class="field">
  <%= f.label　"フリガナ" %>
  (セイ)
  <%= f.text_field :kana_last_name, class: "kana_last_name" %>
  (メイ)
  <%= f.text_field :kana_first_name, class: "kana_first_name" %>
</div>

<div class="field">
  <%= f.label "メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, class: "postal_code" %>
</div>

<div class="field">
  <%= f.label "住所" %>
  <%= f.text_field :residence, class: "residence" %>
</div>

<div class="field">
  <%= f.label "電話番号(ハイフンなし)" %>
  <%= f.text_field :phone_namber, class: "phone_namber" %>
</div>

<div class="actions">
  <%= f.submit "編集内容を保存する"%>
</div>

<% end %>