<%= form_with(model: shipping_address, :url => {:controller => "customer/shipping_addresses"}, remote: true) do |f| %>
    <div class="shipping_addres col-xs-10">
        <div class="form-group col-xs-12">
            <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label" %>
            <%= f.text_field :postal_code, class: "col-xs-4 form-control-static" %>
        </div>

        <div class="form-group col-xs-12">
            <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
            <%= f.text_field :address, class: "col-xs-7 form-control-static" %>
        </div>

        <div class="form-group col-xs-12">
            <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
            <%= f.text_field :name, class: "col-xs-4 form-control-static" %>
        </div>
        <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
    </div>

<% end %>

